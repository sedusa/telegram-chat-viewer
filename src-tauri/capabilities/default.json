{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "identifier": "default",
  "description": "Default permissions for the application",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "shell:default",
    "shell:allow-execute",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://*/*"
        },
        {
          "url": "https://*/*"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "open",
          "cmd": "open",
          "args": true,
          "sidecar": false
        }
      ]
    }
  ]
}

